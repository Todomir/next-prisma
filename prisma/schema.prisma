datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Song {
  id       Int     @id @default(autoincrement())
  name     String
  artist   Artist? @relation(fields: [artistId], references: [id])
  artistId Int?
}

model Artist {
  id    Int    @id @default(autoincrement())
  name  String @unique
  songs Song[]
}
